@SET LIBDIR  /cluster/apps/nss/gcc-6.3.0/cp2k/8.2/x86_64/data/
@SET SCRATCH /cluster/scratch/fcambie
@SET INPDIR ${SCRATCH}/TMP

&GLOBAL
  PROJECT o2
PREFERRED_DIAG_LIBRARY SL
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &SUBSYS
    &CELL
      ABC 12 12 12
      PERIODIC NONE
    &END CELL
&TOPOLOGY
&END
    &COORD [angstrom]
  O2         6        6        6.61
    &END COORD
    &KIND O2
       MAGNETIZATION 1
       ELEMENT O
       BASIS_SET aug-cc-pVTZ
       POTENTIAL ALL
   &END KIND
&END SUBSYS
&DFT
! WFN_RESTART_FILE_NAME triplet.wfn
MULTIPLICITY 3
LSD
&POISSON                    ! Solver requested for non periodic calculations
PERIODIC NONE
PSOLVER  WAVELET          ! Type of solver
&END POISSON
      BASIS_SET_FILE_NAME     ${LIBDIR}/EMSL_BASIS_SETS
      POTENTIAL_FILE_NAME     ${LIBDIR}/POTENTIAL
    &QS
      METHOD GAPW               ! Method: gaussian and augmented plane waves 
      EPS_DEFAULT 1.0E-16
    &END QS
    &MGRID
      CUTOFF 400
      NGRIDS 4
      REL_CUTOFF 30
    &END MGRID
    &SCF
    ADDED_MOS 6
      SCF_GUESS RESTART
      EPS_SCF 1.0E-06
      MAX_SCF 2000
      &DIAGONALIZATION T
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING T
        ALPHA 0.1
        METHOD DIRECT_P_MIXING
      &END MIXING
      &PRINT
      &END PRINT
    &END SCF

    &XC                        ! Parametes needed to compute the electronic exchange potential 
      &XC_FUNCTIONAL NONE      ! No xc functional
      &END XC_FUNCTIONAL
      &HF                      ! Hartree Fock exchange. In this case is 100% (no fraction specified).   
        &SCREENING             ! Screening of the electronic repulsion up to the given threshold.               
          EPS_SCHWARZ 1.0E-12  ! Threshold specification
        &END SCREENING
      &END HF
    &END XC
   !  &XC
   !  &XC_FUNCTIONAL PBE
   !  &END
   !  &END
     &PRINT
       &MO
        COEFFICIENTS
        ENERGIES
       &END
       &E_DENSITY_CUBE
       &END E_DENSITY_CUBE
       &MO_CUBES
       NHOMO -1
       NLUMO 3
       &END MO_CUBES
       &LOWDIN
       &END
     &END
  &END DFT
&END FORCE_EVAL
&MOTION
   &GEO_OPT
      &BFGS
         TRUST_RADIUS [bohr] 0.1
      &END BFGS
      MAX_FORCE 0.0005
      MAX_ITER 1000
      OPTIMIZER BFGS
   &END GEO_OPT
&END MOTION
